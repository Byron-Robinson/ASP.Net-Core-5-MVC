@model DrinkViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row mx-1 bg-white shadow-sm justify-content-center align-items-center">
    @await Html.PartialAsync("_CarouselPartial")
    <div class="col-sm-9 mt-4">
        <div class="text-center mb-4">
            <h2>PREFERRED DRINKS OF THE WEEK</h2>
        </div>
        <div class="row pb-3">
            <h4>Clients Preferences</h4>
            @foreach (Drink preferredDrink in Model.PreferredDrinks)
            {
                @await Html.PartialAsync("_DrinksSummaryPartial", preferredDrink)
            }
        </div>
    </div>
</div>
